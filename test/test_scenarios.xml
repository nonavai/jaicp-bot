<?xml version="1.0" encoding="UTF-8"?>
<scenarios>
    <!-- Тест 1: Приветствие -->
    <scenario name="Приветствие">
        <input>привет</input>
        <expected>
            <contains>Здравствуйте! Добро пожаловать в автосервис "АвтоПрофи"</contains>
            <contains>Записаться на техобслуживание</contains>
            <contains>Узнать цены на услуги</contains>
            <contains>Узнать часы работы</contains>
        </expected>
    </scenario>

    <!-- Тест 2: Запрос часов работы -->
    <scenario name="Запрос часов работы">
        <input>как вы работаете?</input>
        <expected>
            <contains>Часы работы автосервиса "АвтоПрофи"</contains>
            <contains>Понедельник - Пятница: 8:00 - 20:00</contains>
            <contains>Суббота: 9:00 - 18:00</contains>
            <contains>Воскресенье: 10:00 - 16:00</contains>
        </expected>
    </scenario>

    <!-- Тест 3: Запрос цен -->
    <scenario name="Запрос цен">
        <input>сколько стоит ТО?</input>
        <expected>
            <contains>Цены на услуги автосервиса "АвтоПрофи"</contains>
            <contains>Компактные автомобили: от 2,500 ₽</contains>
            <contains>Средние автомобили: от 3,500 ₽</contains>
            <contains>Крупные автомобили: от 4,500 ₽</contains>
        </expected>
    </scenario>

    <!-- Тест 4: Запись на ТО с полными данными -->
    <scenario name="Запись на ТО с полными данными">
        <input>хочу записаться на ТО, меня зовут Иван Иванов, телефон 8-999-123-45-67, автомобиль Toyota Camry</input>
        <expected>
            <contains>Подтвердите данные для записи на техобслуживание</contains>
            <contains>Имя: Иван Иванов</contains>
            <contains>Телефон: 8-999-123-45-67</contains>
            <contains>Автомобиль: Toyota Camry</contains>
        </expected>
    </scenario>

    <!-- Тест 5: Запись на ТО с частичными данными -->
    <scenario name="Запись на ТО с частичными данными">
        <input>запиши меня на техобслуживание, меня зовут Анна Петрова</input>
        <expected>
            <contains>Теперь мне нужен ваш номер телефона для связи</contains>
        </expected>
    </scenario>

    <!-- Тест 6: Запись на ТО с частичными данными (телефон) -->
    <scenario name="Запись на ТО с частичными данными (телефон)">
        <input>хочу ТО, телефон +7 999 123 45 67</input>
        <expected>
            <contains>Для записи на техобслуживание мне нужно знать ваше имя</contains>
        </expected>
    </scenario>

    <!-- Тест 7: Запись на ТО с частичными данными (марка) -->
    <scenario name="Запись на ТО с частичными данными (марка)">
        <input>нужно техобслуживание, у меня BMW X5</input>
        <expected>
            <contains>Для записи на техобслуживание мне нужно знать ваше имя</contains>
        </expected>
    </scenario>

    <!-- Тест 8: Подтверждение записи -->
    <scenario name="Подтверждение записи">
        <input>да, все верно</input>
        <expected>
            <contains>Заявка на техобслуживание успешно оформлена</contains>
            <contains>Наш сотрудник свяжется с вами в ближайшее время</contains>
        </expected>
    </scenario>

    <!-- Тест 9: Отрицание записи -->
    <scenario name="Отрицание записи">
        <input>нет, неправильно</input>
        <expected>
            <contains>Хорошо, давайте начнем заново</contains>
        </expected>
    </scenario>

    <!-- Тест 10: Прощание -->
    <scenario name="Прощание">
        <input>до свидания</input>
        <expected>
            <contains>Спасибо за обращение в автосервис "АвтоПрофи"</contains>
            <contains>До свидания</contains>
        </expected>
    </scenario>

    <!-- Тест 11: Обработка длинного запроса -->
    <scenario name="Обработка длинного запроса">
        <input>очень длинный запрос который превышает допустимую длину в четыреста символов и содержит много лишней информации которая не нужна для понимания сути вопроса пользователя который хочет записаться на техобслуживание своего автомобиля но при этом рассказывает всю историю покупки машины и все проблемы которые у него были с предыдущими автосервисами и как он не доверяет никому кроме себя и своих друзей которые тоже разбираются в машинах но при этом не имеют сертификатов и лицензий на проведение ремонтных работ</input>
        <expected>
            <contains>Слишком длинный запрос</contains>
            <contains>Пожалуйста, сформулируйте короче</contains>
        </expected>
    </scenario>

    <!-- Тест 12: Обработка некорректного имени -->
    <scenario name="Обработка некорректного имени">
        <input>записаться на ТО, имя Иван</input>
        <expected>
            <contains>Для записи на техобслуживание мне нужно знать ваше имя</contains>
            <contains>Пожалуйста, укажите ваше полное имя (ФИО)</contains>
        </expected>
    </scenario>

    <!-- Тест 13: Обработка некорректного телефона -->
    <scenario name="Обработка некорректного телефона">
        <input>записаться на ТО, телефон 123</input>
        <expected>
            <contains>Теперь мне нужен ваш номер телефона для связи</contains>
        </expected>
    </scenario>

    <!-- Тест 14: Обработка некорректной марки -->
    <scenario name="Обработка некорректной марки">
        <input>записаться на ТО, марка @#$%</input>
        <expected>
            <contains>И последнее - какая у вас марка автомобиля</contains>
        </expected>
    </scenario>

    <!-- Тест 15: Комплексный сценарий записи -->
    <scenario name="Комплексный сценарий записи">
        <input>хочу записаться на техобслуживание</input>
        <expected>
            <contains>Для записи на техобслуживание мне нужно знать ваше имя</contains>
        </expected>
        <input>меня зовут Петр Сидоров</input>
        <expected>
            <contains>Теперь мне нужен ваш номер телефона для связи</contains>
        </expected>
        <input>мой телефон 8-999-987-65-43</input>
        <expected>
            <contains>И последнее - какая у вас марка автомобиля</contains>
        </expected>
        <input>у меня KIA Rio</input>
        <expected>
            <contains>Подтвердите данные для записи на техобслуживание</contains>
            <contains>Имя: Петр Сидоров</contains>
            <contains>Телефон: 8-999-987-65-43</contains>
            <contains>Автомобиль: KIA Rio</contains>
        </expected>
        <input>да, все правильно</input>
        <expected>
            <contains>Заявка на техобслуживание успешно оформлена</contains>
        </expected>
    </scenario>
</scenarios>
